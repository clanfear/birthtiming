	number = {1},
	urldate = {2018-03-31},
	journal = {Scandinavian Journal of Public Health},
	author = {Canivet, Catarina A. and Östergren, Per-Olof and Rosén, Anne-Sofie and Jakobsson, Iréne L. and Hagander, Barbro M.},
	month = jan,

	author = {Akman, I. and Kuşçu, K. and Özdemir, N. and Yurdakul, Z. and Solakoglu, M. and Orhan, L. and Karabekiroglu, A. and Özek, E.},
	month = may,
	year = {2006},
	pmid = {16452109},
	keywords = {attachment style, infantile colic, postpartum depression},
	pages = {417--419},
	file = {Full Text PDF:C\:\\Users\\cclan\\Zotero\\storage\\9FU4FUBA\\Akman et al. - 2006 - Mothers’ postpartum psychological adjustment and i.pdf:application/pdf;Snapshot:C\:\\Users\\cclan\\Zotero\\storage\\66MRIATT\\417.html:text/html}
